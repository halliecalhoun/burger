<h3>Add your favorite types of burgers below to eat!</h3>


<h2>Burgers</h2>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="newBurger">Burger Name:</label>
    <input type="text" id="newBurger" name="burger">
  </div>

  {{!-- <div class="form-group">
    <label for="sleepy">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div> --}}

  <button type="submit" class="btn btn-success" id="addBurger">Add Burger</button>
</form>


<h2>undevoured burgers!</h2>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

{{!-- undevoured burgers --}}
<div class="row">
  <div class="col-sm-6">
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          <span> {{this.id}} : {{this.burger_name}} </span>
          {{> burgers/burger-block devoured=false}}
        {{/unless}} 
      {{/each}}
    </ul>
  </div>
</div>

<h2>Devoured Burgers!</h2>
<div class="row">
  <div class="col-sm-6">
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          <span> {{this.id}} : {{this.burger_name}} </span>
          {{> burgers/burger-block devoured=true}}
        {{/if}} 
      {{/each}}
    </ul>
  </div>
</div>
