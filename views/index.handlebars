<div class="row ">
    <div class="col-sm-6">
  <div class="card" id="card1">
    <div class="card-header">
      Undevoured Burgers
    </div>
    <div class="card-body">
      <h5 class="card-title">Burgers to eat:</h5>
      <p class="card-text">Click devour to eat the burger of your choice.</p>
        <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <span> {{this.id}} : {{this.burger_name}} </span>
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
      {{!-- <a href="#" class="btn btn-primary">Go somewhere</a> --}}
    </div>
  </div>
  </div>
  
{{!-- devoured burgers --}}
    <div class="col-sm-6">
  <div class="card" id="card2">
    <div class="card-header">
      Devoured Burgers
    </div>
    <div class="card-body">
      <h5 class="card-title">Burgers to eat:</h5>
      <p class="card-text">Click devour to eat the burger of your choice.</p>
        <ul>
        {{#each burgers}}
        {{#if devoured}}
        <span> {{this.id}} : {{this.burger_name}} </span>
        {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}
      </ul>
      {{!-- <a href="#" class="btn btn-primary">Go somewhere</a> --}}
    </div>
  </div>
  </div>
